<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AllMatchParent"
    tools:context="com.droid.contactdata.activity.contact.ContactListActivity">

    <include
        android:id="@+id/view_loading_progress"
        layout="@layout/loading_progress_view"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view_contacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:visibility="gone"/>
</RelativeLayout>
